    /**
     *
     *
     * @type {boolean}
     */
    isRead?: boolean,
    /**
     *
     *
     * @type {boolean}
     */
    isWrite?: boolean,
    /**
     *
     *
     * @type {Array<{
     *     value: string,
     *     label: string,
     *   }>}
     */
