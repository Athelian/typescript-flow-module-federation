{
  "extends": ["plugin:flowtype/recommended", "airbnb", "prettier", "prettier/react"],
  "env": {
    "jest": true,
    "browser": true
  },
  "plugins": ["import", "json", "flowtype", "prettier", "graphql"],
  "rules": {
    "graphql/template-strings": [
      "error",
      {
        "env": "apollo"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}
